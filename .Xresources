!define myFont Hack Nerd Font Mono
#define myFont Inconsolata
!define myFont Source Code Pro

#define myFontSize 12 

! font settings
! only scp has semibold, so make sure to change to 'bold' if not using
URxvt.font: xft:myFont:size=myFontSize
!URxvt*font: xft:myFont:pixelsize=myFontSize
!URxvt*italicFont: xft:myFont:italic:pixelsize=myFontSize
!URxvt*boldFont: xft:myFont:bold:autohint=true:pixelsize=myFontSize
!URxvt*boldItalicFont: xft:myFont:bold:autohint=true:italic:pixelsize=myFontSize

! disable scrollbar
URxvt.scrollBar: false
